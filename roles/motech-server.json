{
  "name": "motech-server",	

  "json_class": "Chef::Role",
  "env_run_lists": {
    "prod": [      
      "recipe[cron]",
      "recipe[curl]",
      
      "recipe[java]",
      
      "recipe[mysql::server]",
      "recipe[mysql::client]",
      "recipe[activemq]",
      "recipe[couchdb]",

      "recipe[tomcat]",

      "role[apache-server]",

      "recipe[motech-server]"
    ]
  },
  "run_list": [
  ],
  "description": "Sets up the motech platform server",
  "chef_type": "role",
  
  "override_attributes": {
    "java": {
       "jdk_version": "7",
       "install_flavor": "oracle",
       "oracle": {
          "accept_oracle_download_terms": true
       }
    }
  }
}
