    <repositories>
        <repository>
            <id>Snapshots</id>
            <name>Snapshots</name>
            <snapshots>
                <enabled>true</enabled>
		<updatePolicy>always</updatePolicy>
            </snapshots>
            <url>http://nexus.motechproject.org/content/repositories/snapshots/</url>
